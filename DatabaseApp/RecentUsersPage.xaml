<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatabaseApp.RecentUsersPage"
             Title="Recent Users">

    <Grid Padding="20" RowSpacing="15" RowDefinitions="*,Auto">
        
        <CollectionView ItemsSource="{Binding Users}" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5" ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Name}" FontSize="16"/>
                        <Label Text="{Binding Age}" FontSize="16" Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Go Back to Main Page"
                Command="{Binding GoBackCommand}"
                Grid.Row="1"
                HeightRequest="50"
                CornerRadius="12"/>
    </Grid>
</ContentPage>
